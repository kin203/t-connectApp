<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <RelativeLayout
                android:id="@+id/sp1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/anhgh1"
                    android:layout_width="120dp"
                    android:layout_height="179dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/ttsp1"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:clickable="true"
                        android:contentDescription="Clear icon"
                        android:drawableTop="@drawable/baseline_clear_24"
                        android:textSize="25sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ttsp1"
                    android:layout_width="180dp"
                    android:layout_height="126dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="47dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tengh1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="MÀN HÌNH MSI"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá : "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000000 "
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>